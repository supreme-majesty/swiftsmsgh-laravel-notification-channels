{
    "name": "swiftsmsgh-laravel-notification-channels/swiftsmsgh",
    "description": "swiftsms-GH SMS Notification Channel For Laravel",
    "homepage": "https://github.com/supreme-majesty/swiftsmsgh-laravel-notification-channels.git",
    "license": "MIT",
    "authors": [
        {
            "name": "Reborn Dzre",
            "email": "reborndzre@gmail.com",
            "homepage": "https://swiftsmsgh.com",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/notifications": "~5.0 || ~6.0 || ~7.0 || ~8.0 || ~9.0 || ~10.0 || ~11.0",
        "illuminate/support": "~5.0 || ~6.0 || ~7.0 || ~8.0 || ~9.0 || ~10.0 || ~11.0",
        "swiftsmsgh/swiftsmsgh-api-sdk": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.15",
        "phpunit/phpunit": "^9.6 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Swiftsmsgh\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Swiftsmsgh\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "extra": {
        "laravel": {
            "providers": [
              "NotificationChannels\\Swiftsmsgh\\SwiftsmsghServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
